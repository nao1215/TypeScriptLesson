{
  "name": "lesson-68-api-documentation",
  "version": "1.0.0",
  "description": "TypeScript Lesson 68: APIドキュメント (API Documentation)",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "ts-node src/index.ts",
    "docs:api": "swagger-jsdoc -d swagger.json -o docs/api.json src/**/*.ts",
    "docs:code": "typedoc --out docs/code src",
    "docs:serve": "swagger-ui-serve docs/api.json",
    "docs:validate": "swagger-jsdoc --validate docs/api.json",
    "test": "jest"
  },
  "keywords": ["typescript", "api-documentation", "openapi", "swagger", "typedoc"],
  "devDependencies": {
    "@types/node": "^20.6.0",
    "@types/swagger-jsdoc": "^6.0.1",
    "@types/swagger-ui-express": "^4.1.4",
    "typescript": "^5.2.2",
    "ts-node": "^10.9.1",
    "typedoc": "^0.25.1",
    "jest": "^29.7.0"
  },
  "dependencies": {
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "express": "^4.18.2"
  }
}